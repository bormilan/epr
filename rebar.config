{project_plugins,
 [{rebar3_hank, "~> 1.4.0"},
  {rebar3_hex, "~> 7.0.7"},
  {rebar3_format, "~> 1.3.0"},
  {rebar3_lint, "~> 3.1.0"},
  {rebar3_depup, "~> 0.4.0"},
  {covertool, "~> 2.0.6"}]}.
